<div class="row">
  <div class="spacer"></div>
  <div class="col-md-12">
    <%= link_to new_conversation_path do %>
      <i class="fa fa-plus-circle" aria-hidden="true">  New message</i>
    <% end %>
    <div class="spacer"></div>
  </div>

  <div class="col-md-10">
    <div class="panel panel-default">
      <div class="panel-body">
        <% if is_conversation %>
          <%= render 'conversations/form' %>
        <% else %>
          <%= render partial: 'conversations/conversation', collection: messages %>
        <% end %>
      </div>
    </div>
  </div>
</div>
