<%= form_for :conversation, url: :conversations, html: { class: "" } do |f| %>
    <div class="form-group">
      <%= f.label :recipients %>
      <%= f.select(:recipients, User.all_except(current_user).collect {|p| [ p.name, p.id ] }, {}, { multiple: true , class: "chosen-select form-control" })%>
    </div>
    
    <%= f.hidden_field :subject, placeholder: "Subject", value: "-", class: "form-control" %>
    
    <div class="form-group">
      <%= f.label :message %>
      <%= f.text_area :body, class: 'form-control', placeholder: "Type your message here", rows: 4  %>
    </div>

    <%= f.submit "Send Message", class: "btn btn-primary" %>
<% end %>
